{
  "manifest_version": 3,
  "name": "Allow Right Click",
  "version": "1.0.0",
  "description": "Enable right-clicking and copying on websites that disable these features",
  "permissions": [],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
