{
  "manifest_version": 3,
  "name": "Allow Copy",
  "version": "1.4.0",
  "description": "Enable copying and text selection on websites that disable these features",
  "permissions": ["storage", "activeTab", "scripting", "webNavigation"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
